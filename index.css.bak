@charset "utf-8";
* {
box-sizing: border-box;	
}

body {
background-color: #d6f5f5;
font-family: Arial, Tahoma, sans-serif;
color: #000000;
margin: 0;
}

img{
display: block;	
background-size: cover;
background-repeat: no-repeat;
border-radius: 15px;
width: 95%;
height: 30%;
margin-left: auto;
margin-right: auto;
padding: 5px;
}

.content {
background: white;
margin-left: 750px;
margin-right: 750px;
padding: 10px;
border-radius: 15px;	
}


h1 {
text-align: center;
font-size: 20px;
padding: 10px;
}

p {
text-align: center;
font-size: 15px;
}

main{ 
width: 80%;
background-color: #FFE5B4;
float: left;
padding: 5px;
margin-left: 10%
}

footer {
clear: both;
background-color: #FFE5B4;
color: #000000;
text-align: center;
margin-left: 10%;
padding: 5px;
font-size: 12pt;
width: 80%;
}

nav {
color: #FFE5B4;
padding: 5px;
width: 80%;
margin-left: 10%;
font-weight: bold;
}

.attribution {
font-size: 11px;
text-align: center;
}

.attribution a {
color: hsl 228, 45%, 44%;	
}

